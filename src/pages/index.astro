---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ozRewrite from "../data/projects/oz-rewrite";

const p = ozRewrite;

// slug가 비어도 안전하게
const slug = p?.slug ?? "oz-rewrite";

// hero 구조가 바뀌어도 안전하게
const headline =
    p?.hero?.headline ??
    "공개된 플레이 기반으로, 담당 기능의 UI·연출·최적화 사례를 영상 중심으로 정리했습니다.";

const subline =
    p?.hero?.subline ??
    "각 섹션의 상세 설계와 구현 의도는 Notion에 별도로 정리했습니다.";
---

<BaseLayout title="포트폴리오">
    <Header />

    <main class="container">
        <section class="section">
            <p class="kicker">OZ · Web Portfolio</p>
            <h1 class="h1">OZ · Web Portfolio</h1>

            <p class="lead">{headline}</p>
            <p class="muted">{subline}</p>

            <div class="spacer"></div>

            <a class="card" href={`${import.meta.env.BASE_URL}projects/${slug}/`}>
                <img
                        class="card__thumb"
                        src="/media/projects/oz-rewrite/Temp.png"
                        alt="OZ:Rewrite 썸네일"
                        loading="lazy"
                />
                <div class="card__body">
                    <h2 class="h2">{p?.title ?? "OZ:Rewrite"}</h2>
                    <p class="muted">{p?.subtitle ?? "Unity(UGUI) 기반 라이브 서비스 클라이언트"}</p>
                </div>
            </a>
        </section>
    </main>

    <Footer />
</BaseLayout>
