---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ozRewrite from "../../data/projects/oz-rewrite";

const p = ozRewrite;
const slug = p?.slug ?? "oz-rewrite";
---

<BaseLayout title="프로젝트">
    <Header />

    <main class="container">
        <section class="section">
            <h1 class="h1">프로젝트</h1>
            <p class="muted">현재는 OZ:Rewrite를 먼저 정리하고, 이후 LWC를 추가할 예정입니다.</p>

            <div class="spacer"></div>

            <div class="cards">
                <a class="card" href={`/projects/${slug}`}>
                    <img
                            class="card__thumb"
                            src="/media/projects/oz-rewrite/Temp.png"
                            alt="OZ:Rewrite 썸네일"
                            loading="lazy"
                    />
                    <div class="card__body">
                        <h2 class="h2">{p?.title ?? "OZ:Rewrite"}</h2>
                        <p class="muted">{p?.subtitle ?? "Unity(UGUI) 기반 라이브 서비스 클라이언트"}</p>
                        <p class="body">{p?.hero?.headline ?? "UI·연출·최적화 사례를 카드 형태로 정리"}</p>
                    </div>
                </a>
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>
