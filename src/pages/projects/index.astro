---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

import ozRewrite from "../../data/projects/oz-rewrite";
import lwc from "../../data/projects/lwc"; // LWC도 카드로 같이 보여주려면 추가

const projects = [ozRewrite, lwc]; // 나중에 프로젝트 늘어나면 여기만 추가
---

<BaseLayout title="프로젝트">
    <Header />

    <main class="container">
        <section class="section">
            <h1 class="h1">프로젝트</h1>
            <p class="muted">정리된 프로젝트들을 카드로 확인할 수 있습니다.</p>

            <div class="spacer"></div>

            <div class="cards">
                {projects.map((p) => (
                        <a class="card" href={`/projects/${p.slug}/`}>
                            <img
                                    class="card__thumb"
                                    src={p.thumb?.src ?? "/media/projects/common/placeholder.png"}
                                    alt={p.thumb?.alt ?? `${p.title} 썸네일`}
                                    loading="lazy"
                            />
                            <div class="card__body">
                                <h2 class="h2">{p.title}</h2>
                                {p.tagline ? <p class="muted">{p.tagline}</p> : null}
                                {p.headline ? <p class="body">{p.headline}</p> : null}
                            </div>
                        </a>
                ))}
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>
